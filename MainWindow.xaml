<Window x:Class="Galary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galary"
        mc:Ignorable="d"
        Title="MainWindow" Height="411" Width="469" FontSize="20">
    <TabControl x:Name="Controller" Margin="0,0,0,-6">
        <TabItem  Header="Запросы">
            <StackPanel Height="315">
                <Label Content="Запрос" Height="41"/>
                <TextBox x:Name="zapros" Height="131" Margin="0,0,0,20" />
                <Button Content="Бежать" Width="200" HorizontalAlignment="Right" Margin="0,5,20,0" Click="Button_Click"/>
                <Button Content="быстрый select" Width="200" HorizontalAlignment="Right" Margin="0,5,20,0" Click="Button_Click_1"/>
                <Button Content="Монтировать" Width="200" HorizontalAlignment="Right" Margin="0,5,20,0" Click="Button_Click_2"/>
            </StackPanel>
        </TabItem>
        <TabItem x:Name="chernovik"  Header="" IsEnabled="False">
            <DataGrid x:Name="grid"/>
        </TabItem>
    </TabControl>
</Window>
